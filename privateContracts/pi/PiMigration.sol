// so pioneers don't have to wait for picoreteam batch migrations

contract Pi migration {

function migratePiFromMining ( kyc'ed user, verified wallet address, mined pi) {

msg.sender(mined pi) => msg.sender(address balance);

upon += msg.sender(address balance), refresh migratable pi to -= mined pi migrated;
}


function migratePiFromValidatingKyc (kyc'ed user, verified wallet address, Validator pi) {

Validator pi = successful validations(number) * 0.33 piForValidation;

msg.sender(Validator pi) => msg.sender(address balance);

upon += msg.sender(address balance), refresh owed pi to -= validator pi migrated;
}

}